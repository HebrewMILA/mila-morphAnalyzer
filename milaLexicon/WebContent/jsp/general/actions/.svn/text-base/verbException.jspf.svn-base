<%@ page 
	language="java"
	contentType ="text/html; charset=utf-8"
	pageEncoding="utf-8"
	import="lexicon.contents.exception_types.VerbExceptionType"
%>
<div id='verb_div_action' style="display:none;">
<table width='100%' border='1'  RULES=NONE FRAME=BOX bordercolor='red' bordercolordark='WHITE'>
	<tr>
		<td>
			פעולה:
		</td>
		<td>
			<select name=verb_exception_action>
				<option value='add' <%if (verbExcption.getAction().equals("add")) out.print("SELECTED");%>>הוספה</option>
				<option value='replace' <%if (verbExcption.getAction().equals("replace")) out.print("SELECTED");%>>החלפה</option>
				<option value='remove' <%if (verbExcption.getAction().equals("remove")) out.print("SELECTED");%>>הסרה</option>
			</select>
		</td>
	</tr>	
	<tr>
		<td>
			צורה לא מנוקדת:
		</td>
		<td>
			<input type='text' name='verb_exception_undotted' size=20 value='<%=verbExcption.getUndotted()%>'>
		</td>
	</tr>
	<tr>
		<td>
			צורת תעתיק:
		</td>
		<td>
			<%=verbExcption.getTransliterated()%>
		</td>
	</tr>
	<tr>
		<td>
			צורה מנוקדת:
		</td>
		<td>
			<input type='text' name='verb_exception_dotted' size=20 value='<%=verbExcption.getDotted()%>'>
		</td>
	</tr>	
	<tr>
		<td>
			כתיב:
		</td>
		<td>
			<select name='verb_exception_script'>
				<option value='formal' <%if (verbExcption.getScript().equals("formal")) out.print("SELECTED");%>>כתיב מלא חסר ניקוד ע"פ כללי האקדמיה</option>
				<option value='typo' <%if (verbExcption.getScript().equals("typo")) out.print("SELECTED");%>>שגיאת כתיב</option>
				<option value='colloquial' <%if (verbExcption.getScript().equals("colloquial")) out.print("SELECTED");%>>כתיב לא תקין</option>
				<option value='slang' <%if (verbExcption.getScript().equals("slang")) out.print("SELECTED");%>>סלנג (הכתיבה אולי תקנית, אולם המילה אינה בהכרח תקנית)</option>
			</select>				
		</td>
	</tr>	
	<tr>
		<td>
			זמן:
		</td>
		<td>
			<select name='verb_exception_tense'>
				<option value='past' <%if (verbExcption.getTense().equals("past")) out.print("SELECTED");%>>עבר</option>
				<option value='beinoni' <%if (verbExcption.getTense().equals("beinoni")) out.print("SELECTED");%>>בינוני</option>
				<option value='future' <%if (verbExcption.getTense().equals("future")) out.print("SELECTED");%>>עתיד</option>
				<option value='imperative' <%if (verbExcption.getTense().equals("imperative")) out.print("SELECTED");%>>ציווי</option>
				<option value='infinitive' <%if (verbExcption.getTense().equals("infinitive")) out.print("SELECTED");%>>שם פועל</option>
				<option value='origin' <%if (verbExcption.getTense().equals("origin")) out.print("SELECTED");%>>מקור</option>
			</select>				
		</td>
	</tr>		
	<tr>
		<td>
			גוף/מין/מספר:
		</td>
		<td>
			<select name='verb_exception_pgn'>
				<option value='1p/MF/Sg' <%if (verbExcption.getPgn().equals("1p/MF/Sg")) out.print("SELECTED");%>>גוף ראשון / זכר וגם נקבה / יחיד</option>
				<option value='2p/M/Sg' <%if (verbExcption.getPgn().equals("2p/M/Sg")) out.print("SELECTED");%>>גוף שני   / זכר          / יחיד</option>
				<option value='2p/F/Sg' <%if (verbExcption.getPgn().equals("2p/F/Sg")) out.print("SELECTED");%>>גוף שני   / נקבה         / יחיד</option>
				<option value='3p/M/Sg' <%if (verbExcption.getPgn().equals("3p/M/Sg")) out.print("SELECTED");%>>גוף שלישי / זכר          / יחיד</option>
				<option value='3p/F/Sg' <%if (verbExcption.getPgn().equals("3p/F/Sg")) out.print("SELECTED");%>>גוף שלישי / נקבה         / יחיד</option>
				<option value='1p/MF/Pl' <%if (verbExcption.getPgn().equals("1p/MF/Pl")) out.print("SELECTED");%>>גוף ראשון / זכר וגם נקבה / רבים</option>
				<option value='2p/M/Pl' <%if (verbExcption.getPgn().equals("2p/M/Pl")) out.print("SELECTED");%>>גוף שני   / זכר          / רבים</option>
				<option value='2p/F/Pl' <%if (verbExcption.getPgn().equals("2p/F/Pl")) out.print("SELECTED");%>>גוף שני   / נקבה         / רבים</option>
				<option value='3p/M/Pl' <%if (verbExcption.getPgn().equals("3p/M/Pl")) out.print("SELECTED");%>>גוף שלישי / זכר          / רבים</option>
				<option value='3p/F/Pl' <%if (verbExcption.getPgn().equals("3p/F/Pl")) out.print("SELECTED");%>>גוף שלישי / נקבה         / רבים</option>
				<option value='123p/M/Sg' <%if (verbExcption.getPgn().equals("123p/M/Sg")) out.print("SELECTED");%>>גוף כלשהו / זכר / יחיד</option>
				<option value='123p/F/Sg' <%if (verbExcption.getPgn().equals("123p/F/Sg")) out.print("SELECTED");%>>גוף כלשהו / נקבה / יחיד</option>
				<option value='123p/M/Pl' <%if (verbExcption.getPgn().equals("123p/M/Pl")) out.print("SELECTED");%>>גוף כלשהו / זכר / יחיד</option>
				<option value='123p/F/Pl' <%if (verbExcption.getPgn().equals("123p/F/Pl")) out.print("SELECTED");%>>גוף כלשהו / נקבה / יחיד</option>
				<option value='unspecified' <%if (verbExcption.getPgn().equals("unspecified")) out.print("SELECTED");%>>לא ידוע</option>
			</select>				
		</td>
	</tr>		
	<tr>
		<td>
			כינוי מושא חבור:
		</td>
		<td>
			<select name='verb_exception_accusativeSuffix'>
				<option value='unspecified' <%if (verbExcption.getAccusativeSuffix().equals("unspecified")) out.print("SELECTED");%>>לא ידוע</option>
				<option value='1p/MF/Sg' <%if (verbExcption.getAccusativeSuffix().equals("1p/MF/Sg")) out.print("SELECTED");%>>גוף ראשון / זכר וגם נקבה / יחיד</option>
				<option value='2p/M/Sg' <%if (verbExcption.getAccusativeSuffix().equals("2p/M/Sg")) out.print("SELECTED");%>>גוף שני   / זכר          / יחיד</option>
				<option value='2p/F/Sg' <%if (verbExcption.getAccusativeSuffix().equals("2p/F/Sg")) out.print("SELECTED");%>>גוף שני   / נקבה         / יחיד</option>
				<option value='3p/M/Sg' <%if (verbExcption.getAccusativeSuffix().equals("3p/M/Sg")) out.print("SELECTED");%>>גוף שלישי / זכר          / יחיד</option>
				<option value='3p/F/Sg' <%if (verbExcption.getAccusativeSuffix().equals("3p/F/Sg")) out.print("SELECTED");%>>גוף שלישי / נקבה         / יחיד</option>
				<option value='1p/MF/Pl' <%if (verbExcption.getAccusativeSuffix().equals("1p/MF/Pl")) out.print("SELECTED");%>>גוף ראשון / זכר וגם נקבה / רבים</option>
				<option value='2p/M/Pl' <%if (verbExcption.getAccusativeSuffix().equals("2p/M/Pl")) out.print("SELECTED");%>>גוף שני   / זכר          / רבים</option>
				<option value='2p/F/Pl' <%if (verbExcption.getAccusativeSuffix().equals("2p/F/Pl")) out.print("SELECTED");%>>גוף שני   / נקבה         / רבים</option>
				<option value='3p/M/Pl' <%if (verbExcption.getAccusativeSuffix().equals("3p/M/Pl")) out.print("SELECTED");%>>גוף שלישי / זכר          / רבים</option>
				<option value='3p/F/Pl' <%if (verbExcption.getAccusativeSuffix().equals("3p/F/Pl")) out.print("SELECTED");%>>גוף שלישי / נקבה         / רבים</option>
				<option value='123p/M/Sg' <%if (verbExcption.getAccusativeSuffix().equals("123p/M/Sg")) out.print("SELECTED");%>>גוף כלשהו / זכר / יחיד</option>
				<option value='123p/F/Sg' <%if (verbExcption.getAccusativeSuffix().equals("123p/F/Sg")) out.print("SELECTED");%>>גוף כלשהו / נקבה / יחיד</option>
				<option value='123p/M/Pl' <%if (verbExcption.getAccusativeSuffix().equals("123p/M/Pl")) out.print("SELECTED");%>>גוף כלשהו / זכר / יחיד</option>
				<option value='123p/F/Pl' <%if (verbExcption.getAccusativeSuffix().equals("123p/F/Pl")) out.print("SELECTED");%>>גוף כלשהו / נקבה / יחיד</option>				
			</select>				
		</td>
	</tr>		
	<tr>
		<td colspan=2>
			<input type=Submit value='<%=actionFormButton%>'>
		</td>
	</tr>			
</table>
</div>