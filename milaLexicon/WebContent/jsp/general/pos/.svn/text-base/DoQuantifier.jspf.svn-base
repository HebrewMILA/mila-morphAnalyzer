<%@ page 
	contentType ="text/html; charset=utf-8"
	pageEncoding="utf-8"
	import="lexicon.contents.pos.QuantifierLexiconType"
%>
<%
QuantifierLexiconType quantifier = new QuantifierLexiconType();
if (!newItem && item.getQuantifier() != null && id != 0) {
	quantifier.open(id);
	changeGroup = quantifier.getContents("quantifier_exception_type", "id", id);
}  

if (request.getParameter("pos")!= null) {
	if (request.getParameter("pos").equals("quantifier")) {
		if (request.getParameter("quantifier_gender")!= null) {
			quantifier.setGender(request.getParameter("quantifier_gender"));
		}
		if (request.getParameter("quantifier_type")!= null) {
			quantifier.setType(request.getParameter("quantifier_type")); 
		}			
		if (request.getParameter("quantifier_inflect")!= null) {
			quantifier.setInflect(request.getParameter("quantifier_inflect").equals("1"));
		}
		if (request.getParameter("quantifier_inflectionBase")!= null) {
			quantifier.setInflectionBase(request.getParameter("quantifier_inflectionBase"));
		}
		if (newItem) {
			quantifier.add(item.getID());
		} else {
			quantifier.update();
		}
		item.open(item.getID());
		quantifier.open(item.getID());
	}
}
%>
<div id='quantifier_div' style="display:none;">
<table>
	<tr>
		<td>
			מין:
		</td>
		<td>
			<select name='quantifier_gender'>
				<option value='masculine' <%if (quantifier.getGender().equals("masculine")) out.print("SELECTED");%>>זכר</option>
				<option value='feminine' <%if (quantifier.getGender().equals("feminine")) out.print("SELECTED");%>>נקבה</option>
				<option value='masculine and feminine' <%if (quantifier.getGender().equals("masculine and feminine")) out.print("SELECTED");%>>גם זכר וגם נקבה</option>
				<option value='irrelevant' <%if (quantifier.getGender().equals("irrelevant")) out.print("SELECTED");%>>לא רלוונטי</option>
				<option value='unspecified' <%if (quantifier.getGender().equals("unspecified")) out.print("SELECTED");%>>לא ידוע</option> 															
			</select>				
		</td> 
	</tr>	
	<tr>
		<td>
			סוג שם המספר:
		</td>
		<td>
			<select name='quantifier_type'>
				<option value='unspecified' <%if (quantifier.getType().equals("unspecified")) out.print("SELECTED");%>>לא ידוע</option>
				<option value='numeral ordinal' <%if (quantifier.getType().equals("numeral ordinal")) out.print("SELECTED");%>>מספר סודר</option>
				<option value='numeral cardinal' <%if (quantifier.getType().equals("numeral cardinal")) out.print("SELECTED");%>>מספר מונה</option>
				<option value='numeral fractional' <%if (quantifier.getType().equals("numeral fractional")) out.print("SELECTED");%>>מספר חלקי</option>
				<option value='numeral' <%if (quantifier.getType().equals("numeral")) out.print("SELECTED");%>>שם מספר</option>
				<option value='literal number' <%if (quantifier.getType().equals("literal number")) out.print("SELECTED");%>>מספר</option>
				<option value='gematria' <%if (quantifier.getType().equals("gematria")) out.print("SELECTED");%>>גימטריא</option>								
				<option value='non-numeral' <%if (quantifier.getType().equals("non-numeral")) out.print("SELECTED");%>>כמת שאינו שם מספר</option>	
			</select>				
		</td>
	</tr>
	<tr>
		<td>
			האם נוטה בנטיית גוף/מין/מספר?
		</td>
		<td>
			<select name='quantifier_inflect'>
				<option value='0' <%if (!quantifier.isInflect()) out.print("SELECTED");%>>לא</option>
				<option value='1' <%if (quantifier.isInflect()) out.print("SELECTED");%>>כן</option>						
			</select>				
		</td> 
	</tr>	
	<tr>
		<td>
			בסיס לנטיית גוף/מין/מספר אם שונה מהמילה:  
		</td>
		<td>
			<input type=text name='quantifier_inflectionBase' size=15 value='<%=quantifier.getInflectionBase()%>'>			
		</td>
	</tr>						
</table> 
</div>